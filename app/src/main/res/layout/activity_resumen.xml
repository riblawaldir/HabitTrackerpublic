<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#F3E5F5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtResumen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resumen de registros"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#4A148C"
            android:layout_marginBottom="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CE93D8"
            android:layout_marginBottom="20dp" />

        <EditText
            android:id="@+id/edtBuscarHabitoId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID del hábito a eliminar"
            android:inputType="number"
            android:background="@drawable/edittext_morado"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnEliminarHabito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🗑️ Eliminar Hábito y Relaciones"
            android:backgroundTint="#7B1FA2"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />
    </LinearLayout>
</ScrollView>
