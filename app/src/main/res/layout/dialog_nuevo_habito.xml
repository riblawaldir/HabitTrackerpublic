<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="24dp"
    android:background="#F3E5F5"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/edtNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del hábito"
        android:background="@drawable/edittext_morado"
        android:padding="12dp"
        android:textColor="#000000"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/edtDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripción"
        android:background="@drawable/edittext_morado"
        android:padding="12dp"
        android:textColor="#000000"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/edtPrioridad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Prioridad (alta/media/baja)"
        android:background="@drawable/edittext_morado"
        android:padding="12dp"
        android:textColor="#000000"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/edtFrecuencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Frecuencia (diaria/semanal/etc.)"
        android:background="@drawable/edittext_morado"
        android:padding="12dp"
        android:textColor="#000000"/>
</LinearLayout>
